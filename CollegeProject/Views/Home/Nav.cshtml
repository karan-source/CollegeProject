
@{
    Layout = null;
}

<head>
    <style>
        .nav-logo {
            font-family: "Source Sans Pro", sans-serif;
            font-size: 1.5rem;
        }

        .nav-section {
            font-family: "Montserrat", sans-serif;
        }

        .nav-link {
            font-weight: bold;
        }
    </style>
</head>

<header class="nav-section">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand nav_logo" href="#"> Movie World </a>

            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbar-nav"
                    aria-controls="navbar-nav"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center"
                 id="navbar-nav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link"
                           aria-current="page"
                           href="@Url.Action("Index","Home")">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Movies","Home")">MOVIES</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("AudioBooks","Home")">AUDIOBOOKS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("TVShows","Home")">TV SHOWS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Blog","Home")">BLOG</a>
                    </li>
                    <li class="nav-item d-block d-lg-none">
                        <a class="nav-link" href="@Url.Action("Favourites","Home")">FAVOURITES</a>
                    </li>
                </ul>
            </div>

            <div class="navbar-nav navbar-light d-none d-lg-flex" id="navbarFav">
                <a class="nav-link" href="@Url.Action("Favourites","Home")">
                    <i class="bi bi-heart"></i>
                </a>
            </div>
        </div>
    </nav>
</header>