@model List<CollegeProject.Models.Favourite>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
          crossorigin="anonymous" />

    <!-- Google Font CDN -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300&family=Montserrat:wght@500&family=Ubuntu&family=Source+Sans+Pro&family=Lexend:wght@500&family=Karla:wght@300&family=Cookie&family=Pacifico&display=swap&family=Varela+Round&display=swap"
          rel="stylesheet" />

    <!-- BootStrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" />

    <link rel="icon" href="~/Content/images/favicon.png" />

    <link rel="stylesheet" href="~/Content/style/favourites-styles.css" />

    <title>Favourite Page</title>
</head>

<body>
    <!-- Nav Section -->

    <div id="navbar">
        @Html.Partial("~/Views/Home/Nav.cshtml")
    </div>

    @if (Model.Count > 0)
    {
        <div class="container pb-4 pt-4">
            <div class="row align-items-center">
                <div class="col-sm">
                    <h2 id="fav-heading">Favourite Movies</h2>
                    <h5 id="fav-descp">The ones you loved to watch again 'n' again.</h5>
                </div>
            </div>
        </div>

        <div class="container">
            <table id="my-table">
                <thead>
                    <tr>
                        <th> Movie Image </th>
                        <th> Movie Title </th>
                        <th> Release / Genre </th>
                        <th> Remove Movie </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src="@Url.Content(item.Image)" class="fav-image" /></td>
                            <td>@item.Title</td>
                            <td>@item.Release / @item.Genre</td>
                            <td><a href="@Url.Action("Remove","Home",item)"><img src="~/Content/images/remove.png" class="remove-image" /></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="container pt-5 pb-5">
            <div class="row align-items-center">
                <div class="col-sm">
                    <h3 id="fav-heading">You don't have any favourite movies yet.</h3>
                    <h5 id="fav-descp">Try to add some thing new to the list.</h5>
                </div>
            </div>
        </div>
    }

    <!-- Footer -->
    <div id="footer">
        @Html.Partial("~/Views/Home/Footer.cshtml")
    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
            crossorigin="anonymous"></script>

</body>
</html>
