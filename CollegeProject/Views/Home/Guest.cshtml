@model CollegeProject.ViewModel.IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous" />

    <!-- Google Font CDN -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300&family=Montserrat:wght@500&family=Ubuntu&family=Source+Sans+Pro&family=Lexend:wght@500&family=Karla:wght@300&family=Cookie&family=Pacifico&family=Baloo+Tammudu+2:wght@500&display=swap&family=Varela+Round&display=swap"
          rel="stylesheet" />

    <!-- BootStrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link rel="stylesheet" href="~/Content/style/index-styles.css" />

    <link rel="icon" href="~/Content/images/favicon.png" />

    <title>Customer Page</title>
</head>

<body>
    <!-- Nav Section -->

    <div id="navbar">
        @Html.Partial("~/Views/Home/GuestNav.cshtml")
    </div>

    <!-- Slider Section -->

    <section class="slider-section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg p-0">
                    <div id="carouselExample" class="carousel slide carousel-light" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/Content/images/slide-1.jpg" class="d-block w-100" alt="..." />
                            </div>
                            @foreach (var item in Model.MySlides)
                            {
                                <div class="carousel-item">
                                    <img src="@Url.Content(item.SlideImage)" class="d-block w-100" alt="..." />
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Movie Cards Section -->
    <section class="card-section">
        <div class="container pt-5 pb-5">
            <div class="movie-intro">
                <h6>ONLINE STREAMING</h6>
                <h1>Top Rated Movies</h1>
            </div>
            <div class="row pt-4 pb-4">
                @foreach (var item in Model.MyMovies)
                {
                    <div class="col-xl-2 col-lg-4 col-md-4 col-sm-6 col-6">
                        <div class="movie-card">
                            <div class="movie-card-img">
                                <img src="@Url.Content(item.Image)" class="card-img-top movie-image" alt="..." />
                            </div>
                            <div class="body">
                                <input type="hidden" class="movie-id" value="@item.Id" />
                                <p class="card-title movie-type">@item.Release</p><span class="movie-genre">@item.Genre</span>
                                <div>
                                    <h6 class="card-text movie-title">@item.Title</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <div class="wpb_wrapper text-center">
                <button onclick="alert('Create your account to explore.')" class="custom-button"> BROWSE ALL MOVIES </button>
            </div>
        </div>
    </section>

    <!-- TV Shows -->

    <section>
        <div class="container pt-5 pb-5">
            <div class="row pb-4">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 feature-intro">
                    <h1>
                        Popular TV Shows<br />To Watch Now
                    </h1>
                    <p>Most rated shows by days</p>
                </div>
                @foreach (var item in Model.MyTvShows)
                {
                    <div class="col-xl-3 col-lg-4 col-md-4 col-sm-6 col-6 ">
                        <div class="feature-card">
                            <div class="feature-card-img">
                                <img src="@Url.Content(item.Image)" class="card-img-top feature-image" alt="..." />
                            </div>
                            <div class="feature-body">
                                <p class="card-title feature-type">@item.Episodes</p>
                                <h5 class="card-text feature-title">@item.Title</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="wpb_wrapper text-center">
                <button onclick="alert('Create your account to explore.')" class="custom-button-tv"> BROWSE ALL TV SHOWS </button>
            </div>
        </div>
    </section>

    <!-- Audiobook Section -->

    <section class="audio-section">
        <div class="container pt-5 pb-5">
            <div class="movie-intro">
                <h6>ONLINE STREAMING</h6>
                <h1>Listen AudioBooks</h1>
            </div>
            <div class="row pt-4 pb-4">
                @foreach (var item in Model.MyAudioBooks)
                {
                    <div class="col-xl col-lg-4 col-md-4 col-sm-6 col-6">
                        <div class="audio-card">
                            <div class="audio-card-img">
                                <img src="@Url.Content(item.Image)" class="card-img-top audio-image" alt="..." />
                            </div>
                            <div class="body">
                                <p class="card-title audio-release">@item.Release</p>
                                <h6 class="card-text audio-title">@item.Title</h6>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="wpb_wrapper text-center">
                <button onclick="alert('Create your account to explore.')" class="custom-button">
                    BROWSE ALL AUDIOBOOKS
                </button>
            </div>
        </div>
    </section>

    <!-- Live Section -->

    <section class="live-bg pt-5 pb-5">
        <div class="container">
            <div class="row">
                <div class="col-xl-5 col-lg-6">
                    <div class="section-title mt-4">
                        <span class="sub-title">ONLINE STREAMING</span>
                        <h2 class="title">
                            Live Movie &amp; TV Shows For Friends &amp; Family
                        </h2>
                    </div>

                    <div class="live-movie-~/Content">
                        <p>
                            Lorem ipsum dolor sit amet, consecetur adipiscing elseddo
                            eiusmod There are many variations of passages of lorem Ipsum
                            available, but the majority have suffered alteration.
                        </p>

                        <div class="active-customer">
                            <h2>20K+</h2>
                            <p>Active Customer</p>
                        </div>

                        <a href="https://www.youtube.com/watch?v=R2gbPxeNk2E" class="btn btn-live">
                            <i class="bi bi-play-fill p-1"></i> Watch
                            Now
                        </a>
                    </div>
                </div>

                <div class="col-xl-7 col-lg-6">
                    <div class="live-movie-img pt-4" data-wow-delay=".2s" data-wow-duration="1.8s" style="
                visibility: visible;
                animation-duration: 1.8s;
                animation-delay: 0.2s;
                animation-name: fadeInRight;
              ">
                        <img src="~/Content/images/live_img.png" alt="" />
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <div id="footer">
        @Html.Partial("~/Views/Home/Footer.cshtml")
    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
            crossorigin="anonymous"></script>

</body>

</html>
